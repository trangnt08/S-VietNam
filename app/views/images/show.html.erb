<body class="scroll">
<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-3 sidenav">
      <!--<p><a href="#">Link</a></p>-->
      <!--<p><a href="#">Link</a></p>-->
      <!--<p><a href="#">Link</a></p>-->
      <!--<%= link_to 'New Image', new_image_path %>-->
    </div>
    
    <div class="col-sm-7 text-left">
      <p>
        <strong>User:</strong>
        <%= @image.user.email %>
      </p>
      
      <h2 class="title text-center">
        <strong>Title:</strong>
        <%= @image.title %>
      </h2>
      
      <p>
        <strong>Name:</strong>
        <%= @image.scenery_name %>
      </p>
      <p>
        <strong>Address:</strong>
        <%= @image.scenery_address %>
      </p>
      
      <p>
        <!--<strong>Scenery picture:</strong>-->
        <%= image_tag(@image.scenery_picture, :width =>'600', :height =>'auto') %>
      </p>
      
      <p>
        <strong>Description:</strong>
        <%= @image.description %>
      </p>
      
      <p>
        <strong>Vote counts:</strong>
        <%= @image.vote_counts %>
      </p>
      
      <p>
        <strong>Scenery votepoint:</strong>
        <%= @image.scenery_votepoint %>
      </p>

      <h2>コメントフォーム</h2>

      <%= form_for(@image_comment) do |f| %>

      <div class= "field">

      <%= f.label :comment %><br>

      <%= f.text_field :comment %>

      <%= f.hidden_field :image_id, :value => @image.id %>

      </div>

      <div class="actions">

      <%= f.submit %>

      </div>

      <% end %>

      <h2>コメント一覧</h2>

<ul>

<% @image.image_comment.each do |image_comment|%>

<li><%= image_comment.comment %>

(<i><%= image_comment.user_id %></i>)</li>

<% end %>

</ul>


      <p><strong><%= link_to 'Edit', edit_image_path(@image) %> |
          <%= link_to 'Back', images_path %></strong></p>
    </div>
  </div>
</div>
</body>
<p id="notice"><%= notice %></p>






