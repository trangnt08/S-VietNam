<p id="notice"><%= notice %></p>

<h1>Image Likes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>Like</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_likes.each do |image_like| %>
      <tr>
        <td><%= image_like.user_id %></td>
        <td><%= image_like.image_id %></td>
        <td><%= image_like.like %></td>
        <td><%= link_to 'Show', image_like %></td>
        <td><%= link_to 'Edit', edit_image_like_path(image_like) %></td>
        <td><%= link_to 'Destroy', image_like, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image Like', new_image_like_path %>
